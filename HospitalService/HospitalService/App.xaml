<Application x:Class="HospitalService.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:HospitalService"
             StartupUri="MainWindow.xaml">
    <Application.Resources>

        <Style TargetType="Label" x:Key="SecretaryLabelStyle">
            <Setter Property="HorizontalAlignment" Value="Left"></Setter>
            <Setter Property="VerticalAlignment" Value="Center"></Setter>
            <Setter Property="Height" Value="29"></Setter>
        </Style>


        <Style TargetType="TextBox" x:Key="SecretaryTextBoxStyle">
            <Setter Property="HorizontalAlignment" Value="Left"></Setter>
            <Setter Property="VerticalAlignment" Value="Center"></Setter>
            <Setter Property="Height" Value="29"></Setter>
            <Setter Property="Width" Value="200"></Setter>
            <Setter Property="TextWrapping" Value="Wrap"></Setter>
        </Style>
    </Application.Resources>
</Application>
