<Window x:Class="HospitalService.View.DoctorUI.IngredientsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HospitalService.View.DoctorUI"
        mc:Ignorable="d"
        Title="Sastojci" Height="450" Width="400"  FontSize="18"  FontFamily="Open Sans" WindowStartupLocation="CenterScreen" SizeToContent="WidthAndHeight" ResizeMode="NoResize">
    <Grid Height="450" Width="400">
        <ListView  Name="IngredientsView" Margin="40,37,40,173">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding IngredientName}" />
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        <Label Content="Gramaza:" HorizontalAlignment="Left" Margin="40,314,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.436,-0.562"/>
        <TextBox  Name="GramsTextBox" TextWrapping="Wrap" Margin="140,317,159,104"/>
        <Button Content="Dodaj" HorizontalAlignment="Left" Margin="162,388,0,0" VerticalAlignment="Top" Width="57" Click="Add_Click"/>

    </Grid>
</Window>
