<Page x:Class="HospitalService.View.PatientUI.Pages.PreferencesForAppointment"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:HospitalService.View.PatientUI.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="620" d:DesignWidth="985"
      Title="PreferencesForAppointment">

    <Grid>
        <GroupBox x:Name="rb" Margin="40,40,580,430">
            <StackPanel>
                <Label FontWeight="Bold" FontSize="24" FontStyle="Italic">Brzo zakazivanje termina?</Label>
                <RadioButton x:Name="Yes" FontSize="22" FontStyle="Italic">DA</RadioButton>
                <RadioButton x:Name="No" FontSize="22" FontStyle="Italic">NE</RadioButton>
            </StackPanel>
        </GroupBox>
        <Button Content="Zakazi termin" HorizontalAlignment="Left" Margin="110,240,0,0" VerticalAlignment="Top" Height="44" Width="174" FontSize="24" FontStyle="Italic" Click="PreferenceClick" Background="RoyalBlue" Foreground="White"/>

    </Grid>
</Page>
